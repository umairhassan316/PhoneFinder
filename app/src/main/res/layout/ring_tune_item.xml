<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/ring_item_bg"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    android:id="@+id/mainLayout"
    android:layout_marginLeft="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/checkButton"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/check_un_check_icon"
        android:layout_gravity="top|end"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:clickable="false"
        android:focusable="false"
        />

    <ImageView
        android:layout_width="58.64dp"
        android:layout_height="51.63dp"
        android:src="@drawable/dog_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cat"
        android:layout_gravity="center_horizontal"
        android:textColor="#404040"
        android:textSize="14dp"
        android:fontFamily="@font/opensans_regular"
        android:id="@+id/nameText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="9dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="9dp"
        android:layout_marginTop="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginRight="4dp"
            android:background="@drawable/ring_item_gradient_background"
            android:weightSum="1">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/song_play_icon"
                android:layout_gravity="center"
                android:id="@+id/playPauseButton"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:id="@+id/subSettingBtn"
            android:background="@drawable/ring_item_setting_background"
            android:weightSum="1">


            <ImageView
                android:layout_width="19.68dp"
                android:layout_height="19.68dp"
                android:src="@drawable/setting_icon"
                android:layout_gravity="center"
                android:id="@+id/isettingBtn"/>


        </LinearLayout>




    </LinearLayout>



</LinearLayout>